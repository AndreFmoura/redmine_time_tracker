<% unless @time_log.nil? %>
    <%= form_tag(:controller => "time_logs", :action => "add_booking") do %>
        <%= hidden_field_tag(:time_log_id, @time_log.id) %>
        <%= label_tag(:issue_id, "issue") %>
        <%= text_field_tag(:issue_id, "", :placeholder => "issue") %>
        <%= label_tag(:virtual, "virtual?") %>
        <%= check_box_tag(:virtual) %>
        <%= label_tag(:comments, "comments") %>
        <%= text_field_tag(:comments, @time_log.comments.to_s) %>
        <%= label_tag(:spent_time, "time spent") %>
        <%= text_field_tag(:spent_time, @time_log.get_formatted_time) %>
        <%= submit_tag("book") %>
    <% end %>
<% end %>