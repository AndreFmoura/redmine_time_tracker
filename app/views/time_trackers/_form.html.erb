<% unless @time_tracker.nil? %>
    <% @time_tracker.new_record? ? action = "start" : action = "stop"%>

    <%= form_for @time_tracker, :url => {:controller => :time_trackers, :action => action} do |f| %>

        <%= f.label :started_on %>
        <%= f.datetime_select :started_on %>

        <%= f.label :comments %>
        <%= f.text_field :comments %>

        <%= f.label :project_id %>
        <%= f.text_field :project_id %>

        <%= f.label :issue_id %>
        <%= f.text_field :issue_id %>

        <%= f.submit action %>
    <% end %>
<% end %>
